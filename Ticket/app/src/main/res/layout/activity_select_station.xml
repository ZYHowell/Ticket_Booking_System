<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <com.example.runzhe.ticket.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:background="@color/colorRegisterButton"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawableTint="@color/icon_default_color"
        android:hint="请输入关键字"
        android:textColorHint="@color/icon_default_color"
        android:textColor="@color/icon_default_color"
        android:textSize="20sp"
        android:maxLines="1"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.example.runzhe.ticket.WaveSideBar
            android:id="@+id/sideBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:chooseTextColor="@color/blank"
            android:textColor="@color/icon_default_color"
            app:backgroundColor="@color/colorSplashBackground"
            app:hintTextSize="30sp"
            app:radius="24dp"
            app:circleRadius="24dp"/>

    </FrameLayout>
</LinearLayout>

