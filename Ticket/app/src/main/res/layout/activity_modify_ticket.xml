<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--所有id以m开头-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <TextView
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="ID"
                android:textSize="15dp" />

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:text="车名"
                android:textSize="15dp" />

            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:text="车类"
                android:textSize="15dp" />

            <!--上面是左框  下面是右框-->

            <TextView
                android:id="@+id/m_id"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:text="Loading..."
                android:textSize="23dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/m_name"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:text="Loading..."
                android:textSize="23dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/m_catalog"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:text="Loading..."
                android:textSize="23dp"
                android:textColor="#000000"/>

        </GridLayout>

        <View
            android:id="@+id/train_cursor_horizon"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorCursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/time_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading..."/>
        </ScrollView>

        <View
            android:id="@+id/train_cursor_horizon2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorCursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/m_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="发售"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/round_corner_bg_registerbtn"/>

            <Button
                android:id="@+id/m_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="删除"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/round_corner_bg_deletebtn"/>
            <Button
                android:id="@+id/m_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="关闭"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/round_corner_bg_exitbtn"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>