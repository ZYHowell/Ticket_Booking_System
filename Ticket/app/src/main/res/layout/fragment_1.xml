<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!--所有id以b开始-->

            <EditText
                android:id="@+id/b_station_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="北京"
                android:textSize="25dp"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/b_double_arrow"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/double_arrow"/>

            <EditText
                android:id="@+id/b_station_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上海"
                android:textSize="25dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="出发日期"
                android:textSize="20dp"
                android:textColor="#777777"/>

            <TextView
                android:id="@+id/b_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="loading"
                android:textSize="30dp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/b_modify_date"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/modify"/>

        </LinearLayout>

        <Button
            android:id="@+id/b_query"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="查询车票"
            android:textSize="25dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</FrameLayout>