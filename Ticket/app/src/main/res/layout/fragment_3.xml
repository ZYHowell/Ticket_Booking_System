<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment3">


    <ScrollView
        android:id="@+id/profile_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/s_portrait"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerInside"
                android:src="@drawable/default_portrait"/>

            <GridLayout
                android:id="@+id/profile_data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView />

                <TextView
                    android:text="权限"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:textSize="20dp"/>
                <TextView
                    android:text="用户名"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textSize="20dp"/>
                <TextView
                    android:text="邮箱"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:textSize="20dp"/>
                <TextView
                    android:text="手机号码"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:textSize="20dp"/>

                <!---所有id以s开始-->

                <TextView
                    android:id="@+id/s_privilege"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill_horizontal"
                    android:text="Loading..."
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/s_username"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill_horizontal"
                    android:text="Loading..."
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/s_email"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill_horizontal"
                    android:text="Loading..."
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/s_phone"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_gravity="fill_horizontal"
                    android:text="Loading..."
                    android:textSize="20dp"/>

            </GridLayout>

            <Button
                android:id="@+id/s_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="修改"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>